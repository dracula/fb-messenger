{
  "name": "Dracula Messenger",
  "description": "Change the appearance of messenger.com to look like your favourite theme.",
  "version": "0.1",
  "icons": {
    "16":"src/img/dracula16.PNG",
    "48":"src/img/dracula48.PNG",
    "128":"src/img/dracula128.PNG"
  },
  "browser_action": {
    "default_icon": "src/img/dracula16.png",
    "default_title": "Dracula Messenger Theme"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.messenger.com/","https://www.messenger.com/t/*"],
      "js": [
        "driver.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/css/dracula.css"
  ],
  "background": {
    "persistent": false,
    "scripts": ["src/js/background.js"]
  },
  "manifest_version": 2
}